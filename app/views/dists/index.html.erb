<h1 align="center">Dists Record</h1>


<%= link_to "Create Record", new_dist_path, class: "btn btn-outline-success" %>

<table class="table">
  <thead>
    <th> Dist Name </th>
    <th> State Name </th>
    <th colspan="3"> Action </th>
  </thead>
  <% @dists.each do |dist| %>
    <tr>
      <td><%= dist.name %></td> 
      <td><%= dist.state.name %></td>
      <td><%= link_to "Show", dist_path(dist.id), class: "btn btn-outline-success"%></td>
      <td><%= link_to "Edit", edit_dist_path(dist.id), class: "btn btn-outline-success"%></td>
      <td><%= link_to "Destroy", dist_path(dist.id), method: :delete, data: {confirm: "Are You Sure..??"}, class: "btn btn-outline-danger"%></td>
    </tr>
  <% end %>
</table>
