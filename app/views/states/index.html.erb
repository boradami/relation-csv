<h1 align="center">States List</h1>

<%= link_to "Create State Record", new_state_path, class: "btn btn-outline-success" %><br>


<table class="table">

  <thead>
    <th>State Name </th>
    <th  colspan="3"> Action </th>
  </thead>

  <tbody>
    <% @states.each do |state| %>
      <tr>
      <td><%= state.name %></td>
      <td><%= link_to "Show", state_path(state.id), class: "btn btn-outline-success"%></td>
      <td><%= link_to "Edit", edit_state_path(state.id), class: "btn btn-outline-success"%></td>
      <td><%= link_to "Destroy", state_path(state.id), method: :delete, data: { confirm: "Are You Sure..??"}, class: "btn btn-outline-danger"%></td>
     </tr>
    <% end %>
  </tbody>

</table>
